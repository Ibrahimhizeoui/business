{% extends 'base.html.twig' %}
{% block title %}Traiter une opprtunité | BusinessPark{% endblock %}
{% block content %}
	<section id="page-title">
                            <div class="row">
                                <div class="col-sm-8">
                                    <h1 class="mainTitle">CRM </h1>
                                    
                                </div>
                                <ol class="breadcrumb">
                                    <li>
                                        <span>gestion des opprtunités</span>
                                    </li>
                                    <li class="active">
                                        <span>traiter</span>
                                    </li>
                                </ol>
                            </div>
                        </section>
	<div class="container-fluid container-fullw bg-white">
							<div class="row">
								<div class="col-md-12">
									<h5 class="over-title">Traiter une <span class="text-bold">opprtunité</span></h5>
									
									<div class="row">
										
											{{ form_start(form) }}
                                            {{ form_errors(form) }}
                                          
											
										
										<div class="col-md-9">
											<fieldset>
												<legend>
													 Information
												</legend>
												<div class="row">
													<div class="col-md-6">
														<div class="form-group">
															<label>
																Intitulé
															</label><br>
															<span class="text-bold">{{opportunite.intitule}}</span>
														</div>
													</div>
													
												
													<div class="col-md-6">
														<div class="form-group">
															<label class="block">
																Date de fermeture
															</label>
															<span class="text-bold">{{opportunite.datefermeture|date('d M Y')}}</span>
														</div>
													</div>
												</div>

												<div class="row">
													
													<div class="col-md-6">
														<div class="col-md-6">
														<div class="form-group">
															<label>
																Tache
															</label><br>
															<span class="text-bold">{{opportunite.activite}}</span>
														</div>
													</div>
													</div>
													<div class="col-md-6">
														<div class="form-group">
															<label class="block">
																Staus
															</label>
															<div class="clip-radio radio-primary">
																{% if opportunite.type=='nouveau' %}
                                                        <span class="label label-danger" >Nouveau</span>
                                                        {% endif %}
                                                              {% if opportunite.type=='qualifie' %}
                                                                  <span class="label label-warning" >Qualifié</span>
                                                                   {% endif %}


                                                        {% if opportunite.type=='proposition'%}
                                                        <span class="label label-success " >Proposition</span>


                                                        {% endif %}
                                                         {% if opportunite.type=='negociation'%}
                                                        <span class="label label-success " >Négociation</span>


                                                    {% endif %}
															</div>
															
														</div>
													</div>
												</div>
												

												

												<div class="row">
													<div class="col-md-6">
														<div class="form-group">
															<label class="block">
																Revenue
															</label>
															{{ form_widget(form.activite,{'attr' :{'class': 'form-control'}}) }}
														</div>
													</div>
													
													
												
													<div class="col-md-6">
														<div class="form-group">
															<label class="block">
																Compagne marketing
															</label>
															{{ form_widget(form.type,{'attr' :{'class': 'form-control'}}) }}
														</div>
													</div>
													
													
												</div>
												
											</fieldset>
											
										</div>
									</div>
									{{ form_widget(form.save,{ 'attr': {'class': 'btn btn-o btn-primary'} }) }}
														{{ form_end(form) }} 
												
								</div>
							</div>
						</div>
{% endblock %}
