                                    <li class="active">
                                        <span>liste</span>
                                    </li>
                                </ol>
                            </div>
                        </section>
                        <!-- start: DYNAMIC TABLE -->
                        <div class="container-fluid container-fullw bg-white">
                            <div class="row">
                                
                                <div class="col-md-12">
                                    <h5 class="over-title margin-bottom-15">La liste des  <span class="text-bold"> mes services</span></h5>
                                    <br>
                                        <br>
                                    <table class="table table-striped  table-hover table-full-width" id="sample_1">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th class="hidden-xs">Sujet</th>
                                                <th>Description</th>
                                                <th class="hidden-xs">Satisfaction</th>
                                                <th>Date d'ajoute</th>
                                                
                                                
                                                
                                                <th ></th>
                                                
                                                
                                                
                                                </tr>
                                        </thead>
                                        <tbody>
                                            {% for service in services %}
                                            
                                            <tr>
                                                <td > {{service.id}}</td>
                                               
                                                <td class="hidden-xs" >{{service.sujet}}</td>
                                                

                                                
                                                <td  >{{service.description}}</td>
                                                <td class="hidden-xs" >
                                                    {% if service.status=='non' %}
                                                        <span class="label label-danger" >{{service.status}}</span>


                                                        {% else %}
                                                        <span class="label label-success " >{{service.status}}</span>


                                                    {% endif %}
                                                        
                                                    </td>
                                                <td  >{{service.dateajout|date('d M Y')}}</td>
                                                
                                                
                                                
                                                
                                                <td class="center">
                                                <div class="visible-md visible-lg hidden-sm hidden-xs">
                                                    <a href="{{path('modif_service',{'id':service.id})}}" class="btn btn-transparent btn-xs" tooltip-placement="top" tooltip="Edit"><i class="fa fa-pencil"></i></a>
                                                    
                                                   

                                                    <a href="{{path('supp_service',{'id':service.id})}}" class="btn btn-transparent btn-xs tooltips" tooltip-placement="top" tooltip="Remove"><i class="fa fa-times fa fa-white"></i></a>
                                                </div>
                                                <div class="visible-xs visible-sm hidden-md hidden-lg">
                                                    <div class="btn-group" dropdown="">
                                                        <button type="button" class="btn btn-primary btn-sm dropdown-toggle" dropdown-toggle="">
                                                            <i class="fa fa-cog"></i>&nbsp;<span class="caret"></span>
                                                        </button>
                                                        <ul class="dropdown-menu pull-right dropdown-light" role="menu">
                                                            <li>
                                                                <a href="#">
                                                                    Mofidier
                                                                </a>
                                                            </li>

                                                           
                                                            
                                                            <li>
                                                                <a href="#">
                                                                    Supprimer
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div></td>
                                                
                                            </tr>
                                            {% endfor %}
                                            
                                        </tbody>
                                    </table>
