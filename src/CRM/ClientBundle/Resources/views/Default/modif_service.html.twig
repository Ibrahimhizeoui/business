{% extends 'CRMClientBundle::espaceclient.html.twig' %}
{% block title %}Demande un service | BusinessPark{% endblock %}
{% block content %}
	<section id="page-title">
                            <div class="row">
                                <div class="col-sm-8">
                                    <h1 class="mainTitle">Espace Client </h1>
                                    
                                </div>
                                <ol class="breadcrumb">
                                    <li>
                                        <span>services</span>
                                    </li>
                                    <li class="active">
                                        <span>Demande</span>
                                    </li>
                                </ol>
                            </div>
                        </section>
	<div class="container-fluid container-fullw bg-white">
							<div class="row">
								<div class="col-md-12">
									<h5 class="over-title">modifier un <span class="text-bold">Demande de service</span></h5>
									
									<div class="row">
										
											{{ form_start(form) }}
                                            {{ form_errors(form) }}
                                          
											
										
										<div class="col-md-6">
											<fieldset>
												<legend>
													 Information
												</legend>
												<div class="row">
													<div class="col-md-9">
														<div class="form-group">
															<label>
																Nom
															</label>
															{{ form_widget(form.sujet,{ 'attr': {'class': 'form-control','placeholder':'Entrer le sujet'} }) }}
														</div>
													</div>
													
												</div>
												<div class="row">
													<div class="col-md-9">
														<div class="form-group">
															<label class="block">
																Date d'incription
															</label>
															{{ form_widget(form.dateajout,{'attr' :{'class': 'form-control'}}) }}
														</div>
													</div>
													
												</div>

												<div class="row">
													
													<div class="col-md-9">
														<div class="form-group">
															<label class="block">
																Staus
															</label>
															<div class="clip-radio radio-primary">
																{{ form_widget(form.status,{'attr' :{'class': 'form-control'}}) }}
															</div>
															
														</div>
													</div>
													
												</div>


												<div class="row">
													<div class="col-md-9">
														<div class="form-group">
															<label class="block">
																Description
															</label>
															{{ form_widget(form.description,{'attr' :{'class': 'form-control'}}) }}
														</div>
													</div>
													
													
												</div>
												
											</fieldset>
											
										</div>
									</div>
									{{ form_widget(form.save,{ 'attr': {'class': 'btn btn-o btn-primary'} }) }}
														{{ form_end(form) }} 
												
								</div>
							</div>
						</div>
{% endblock %}
