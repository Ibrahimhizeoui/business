													</div>
												</div>
												<div class="form-group">
													<label>
														Sous Categorie  <span class="symbol required"></span>
													</label>
													<div class="form-group">
														
														{{ form_widget(form.parentcategorie,{ 'attr': {'class': 'form-control','placeholder':'tappez l email'} }) }}
													</div>
												</div>
												{{ form_widget(form.save,{ 'attr': {'class': 'btn btn-o btn-primary'} }) }}
														{{ form_end(form) }} 
											</fieldset>
											
										</div>
